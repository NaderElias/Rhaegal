<Window x:Class="MindMap.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mind Map" Height="600" Width="800">
    <!-- Futuristic window background -->
    <Window.Background>
        <RadialGradientBrush>
            <GradientStop Color="#0D0D0D" Offset="0"/>
            <!-- Dark gray/black center -->
            <GradientStop Color="#1A1A1A" Offset="0.3"/>
            <!-- Slightly lighter gray for depth -->
            <GradientStop Color="#00E5FF" Offset="0.7"/>
            <!-- Neon cyan glow -->
            <GradientStop Color="#FF183048" Offset="1"/>
            <!-- Dark blue outer edge -->
        </RadialGradientBrush>
    </Window.Background>

    <Grid>
        <Canvas Name="MindMapCanvas">
            <!-- Futuristic canvas background -->
            <Canvas.Background>
                <RadialGradientBrush>
                    <GradientStop Color="#FF003EFF" Offset="-0.2"/>
                    <GradientStop Color="Black" Offset="1.1"/>
                    <GradientStop Color="White" Offset="-3"/>

                </RadialGradientBrush>
            </Canvas.Background>
        </Canvas>
    </Grid>
</Window>
